{
    "azureFunctions.deploySubpath": "az-func-audio",
    "azureFunctions.scmDoBuildDuringDeployment": true,
    "azureFunctions.pythonVenv": ".venv",
    "azureFunctions.projectLanguage": "Python",
    "azureFunctions.projectRuntime": "~4",
    "debug.internalConsoleOptions": "neverOpen",
    "appService.defaultWebAppToDeploy": "None",
    "appService.deploySubpath": "backend_app",
    "chat.agent.maxRequests": 9999,              // let Agent mode run a lot of steps
    "github.copilot.chat.agent.autoFix": true,   // try auto‑fixing failed edits
    "chat.tools.autoApprove": true,              // skip the “approve tool?” prompts
    "chat.extensionTools.enabled": true,
    "python.testing.pytestArgs": [
        "backend_app"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true // allow tools contributed by extensions
}